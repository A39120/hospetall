<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable name="date" type="String" />
        <variable name="time" type="String"/>
    </data>
    <RelativeLayout
        android:layout_margin="@dimen/default_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/new_event_title"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/default_margin"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/event_title"
            android:inputType="textPersonName"
            app:met_maxCharacters="31"
            app:met_floatingLabel="normal"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/new_event_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:layout_below="@id/new_event_title"
            android:ems="10"
            android:hint="@string/event_summary"
            android:inputType="textPersonName"
            app:met_maxCharacters="255"
            app:met_floatingLabel="normal"/>

        <TextView
            android:id="@+id/event_pet_label"
            android:text="@string/pet"
            android:layout_below="@id/new_event_summary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/pet_list"
            android:layout_below="@id/event_pet_label"
            android:layout_toEndOf="@+id/event_pet_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/event_pet_label" />


        <include
            android:id="@+id/new_event_date"
            layout="@layout/layout_label_value_vertical"
            android:layout_below="@+id/pet_list"
            bind:label="@{@string/new_event_date}"
            bind:value="@{date}"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <Button
            android:id="@+id/new_event_set_date"
            android:layout_below="@id/pet_list"
            android:layout_toEndOf="@+id/new_event_date"
            android:src="@drawable/ic_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/new_event_date" />

        <include
            android:id="@+id/new_event_time"
            android:layout_below="@id/new_event_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            layout="@layout/layout_label_value_vertical"
            bind:label="@{@string/new_event_time}"
            bind:value="@{time}"/>

        <Button
            android:id="@+id/new_event_set_time"
            android:layout_toEndOf="@+id/new_event_time"
            android:layout_below="@+id/new_event_date"
            android:src="@drawable/ic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/new_event_time" />

        <TextView
            android:layout_below="@+id/new_event_time"
            android:id="@+id/new_event_type_label"
            android:text="@string/new_event_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_below="@+id/new_event_type_label"
            android:layout_toEndOf="@+id/new_event_type_label"
            android:id="@+id/new_event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/new_event_type_label" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/new_event_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_event_type_label"
            android:ems="10"
            android:hint="@string/new_event_period_label"
            android:inputType="number"
            app:met_floatingLabel="normal"
            app:met_maxCharacters="3" />

        <Spinner
            android:id="@+id/new_event_period_duration"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_event_type_label"
            android:layout_toRightOf="@+id/new_event_period"
            android:layout_toEndOf="@+id/new_event_period"
            android:entries="@array/periods"/>


        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/new_event_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/add_event"
            android:textColor="@android:color/white"
            custom:pb_colorComplete="@color/green_complete"
            custom:pb_colorError="@color/red_error"
            custom:pb_colorNormal="@color/blue_normal"
            custom:pb_colorPressed="@color/blue_pressed"
            custom:pb_colorProgress="@color/purple_progress"
            custom:pb_textComplete="@string/success"
            custom:pb_textError="@string/error"
            custom:pb_textProgress="@string/loading" />

    </RelativeLayout>
</layout>