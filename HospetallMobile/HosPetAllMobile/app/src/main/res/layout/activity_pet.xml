<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="pet" type="mobile.hospetall.ps.isel.hospetallmobile.models.Pet"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name"
            android:text="@{pet.name}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:textAlignment="center"
            android:textSize="@dimen/title_size" />

        <include
            android:id="@+id/pet_detail"
            android:layout_below="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_pet_detail"
            bind:pet="@{pet}"/>

        <include
            android:layout_below="@+id/pet_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/consultation"
            layout="@layout/layout_list_standard" />

        <include
            android:layout_below="@+id/consultation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/treatment"
            layout="@layout/layout_list_standard"/>

        <include
            android:layout_below="@+id/treatment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/schedule"
            layout="@layout/layout_list_standard"/>

    </RelativeLayout>
</layout>